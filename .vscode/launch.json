
{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "React-debugger",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/src"
        },
        {
            "name": "Express-debugger",
            "type": "node",
            "request": "launch",
            "port": 4000,
            "program": "${workspaceRoot}/express/server.js",
            "stopOnEntry": true,
            "args": [],
            "cwd": "${workspaceRoot}/express",
            "preLaunchTask": null,
            "runtimeExecutable": null
        },
        {
            "name": "Express-Attach",
            "type": "node",
            "request": "attach",
            //"port": 4000,
            //"address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "localRoot": "${workspaceRoot}/express",
            "remoteRoot": "${workspaceRoot}/express"
        }

    ]
}